<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="820.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gestor_tutorias.controlador.Tutor.FXMLHorarioTutoriaPrincipal">

    <children>

        <!-- ENCABEZADO -->
        <Pane prefHeight="60.0" prefWidth="820.0"
              style="-fx-background-color: #006DB2;"
              AnchorPane.topAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">

            <children>
                <Label layoutX="25.0" layoutY="15.0"
                       text="Horarios de TutorÃ­a"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- BOTONES -->
        <Button layoutX="30.0" layoutY="80.0"
                prefWidth="100.0"
                text="Crear"
                onAction="#clicCrear"/>

        <Button layoutX="140.0" layoutY="80.0"
                prefWidth="100.0"
                text="Editar"
                onAction="#clicEditar"/>

        <Button layoutX="250.0" layoutY="80.0"
                prefWidth="110.0"
                text="Consultar"
                onAction="#clicConsultar"/>

        <Button layoutX="370.0" layoutY="80.0"
                prefWidth="110.0"
                text="Eliminar"
                onAction="#clicEliminar"/>

        <!-- TABLA -->
        <TableView fx:id="tvHorarios"
                   layoutX="30.0"
                   layoutY="130.0"
                   prefHeight="280.0"
                   prefWidth="760.0">

            <columns>
                <TableColumn fx:id="colIdHorario"
                             prefWidth="70.0"
                             text="ID"/>

                <TableColumn fx:id="colFecha"
                             prefWidth="110.0"
                             text="Fecha"/>

                <TableColumn fx:id="colHoraInicio"
                             prefWidth="100.0"
                             text="Hora Inicio"/>

                <TableColumn fx:id="colHoraFin"
                             prefWidth="100.0"
                             text="Hora Fin"/>

                <TableColumn fx:id="colTutor"
                             prefWidth="90.0"
                             text="Tutor"/>

                <TableColumn fx:id="colEstudiante"
                             prefWidth="110.0"
                             text="Estudiante"/>

                <TableColumn fx:id="colPeriodoEscolar"
                             prefWidth="120.0"
                             text="Periodo Escolar"/>
            </columns>
        </TableView>

    </children>
</AnchorPane>
