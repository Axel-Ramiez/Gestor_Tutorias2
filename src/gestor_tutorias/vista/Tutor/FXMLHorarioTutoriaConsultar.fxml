<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gestor_tutorias.controlador.Tutor.FXMLHorarioTutoriaConsultar"
            prefHeight="400.0" prefWidth="600.0">
    <children>

        <!-- ENCABEZADO -->
        <Pane prefHeight="60.0" prefWidth="700.0"
              style="-fx-background-color: #283593;"
              AnchorPane.topAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">

            <children>
                <Label layoutX="20.0" layoutY="15.0"
                       text="Horario de TutorÃ­a"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- ID HORARIO -->
        <Label layoutX="30.0" layoutY="80.0" text="ID Horario"/>
        <Label fx:id="lbIdHorario"
               layoutX="30.0"
               layoutY="105.0"
               style="-fx-font-weight: bold;"/>

        <!-- FECHA -->
        <Label layoutX="200.0" layoutY="80.0" text="Fecha"/>
        <DatePicker fx:id="dpFecha"
                    layoutX="200.0"
                    layoutY="100.0"
                    prefWidth="200.0"/>

        <!-- TUTOR -->
        <Label layoutX="430.0" layoutY="80.0" text="Tutor"/>
        <ComboBox fx:id="cbTutor"
                  layoutX="430.0"
                  layoutY="100.0"
                  prefWidth="220.0"
                  promptText="Seleccione tutor"/>

        <!-- HORA INICIO -->
        <Label layoutX="30.0" layoutY="150.0" text="Hora Inicio"/>
        <ComboBox fx:id="cbHoraInicio"
                  layoutX="30.0"
                  layoutY="170.0"
                  prefWidth="100.0"/>

        <ComboBox fx:id="cbMinutoInicio"
                  layoutX="140.0"
                  layoutY="170.0"
                  prefWidth="90.0"/>

        <!-- HORA FIN -->
        <Label layoutX="260.0" layoutY="150.0" text="Hora Fin"/>
        <ComboBox fx:id="cbHoraFin"
                  layoutX="260.0"
                  layoutY="170.0"
                  prefWidth="100.0"/>

        <ComboBox fx:id="cbMinutoFin"
                  layoutX="370.0"
                  layoutY="170.0"
                  prefWidth="90.0"/>

        <!-- ESTUDIANTE (OPCIONAL) -->
        <Label layoutX="30.0" layoutY="230.0" text="Estudiante (opcional)"/>
        <ComboBox fx:id="cbEstudiante"
                  layoutX="30.0"
                  layoutY="250.0"
                  prefWidth="400.0"
                  promptText="Seleccione estudiante"/>

        <Label layoutX="450.0" layoutY="230.0" text="Periodo Escolar"/>

        <ComboBox fx:id="cbPeriodo" layoutX="450.0" layoutY="250.0" prefWidth="200.0"/>

        <Button fx:id="btnCerrar"
                layoutX="460.0"
                layoutY="340.0"
                prefWidth="90.0"
                text="Cerrar"
                onAction="#clicCerrar"
                style="-fx-cursor: hand;"/>



    </children>

</AnchorPane>
