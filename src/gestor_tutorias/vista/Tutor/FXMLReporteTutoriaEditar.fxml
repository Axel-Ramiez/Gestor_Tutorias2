<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="527.0" prefWidth="720.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestor_tutorias.controlador.Tutor.FXMLReporteTutoriaEditar">

    <children>

        <!-- ENCABEZADO -->
        <Pane prefHeight="60.0" prefWidth="720.0" style="-fx-background-color: #283593;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <children>
                <Label layoutX="20.0" layoutY="15.0" text="Reporte de Tutoría" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- ID REPORTE -->
        <Label layoutX="30.0" layoutY="80.0" text="ID Reporte" />
        <Label fx:id="lbIdReporte" layoutX="30.0" layoutY="105.0" style="-fx-font-weight: bold;" />

        <!-- FECHA -->
        <Label layoutX="200.0" layoutY="80.0" text="Fecha del Reporte" />
        <DatePicker fx:id="dpFechaReporte" layoutX="200.0" layoutY="100.0" prefWidth="200.0" />

        <!-- ESTADO -->
        <Label layoutX="430.0" layoutY="80.0" text="Estado" />
        <ComboBox fx:id="cbEstado" layoutX="430.0" layoutY="100.0" prefWidth="200.0" promptText="Seleccione estado" />

        <!-- TUTOR -->
        <Label layoutX="30.0" layoutY="150.0" text="Tutor" />
        <ComboBox fx:id="cbTutor" layoutX="30.0" layoutY="170.0" prefWidth="300.0" promptText="Seleccione tutor" />

        <!-- ESTUDIANTE -->
        <Label layoutX="360.0" layoutY="150.0" text="Estudiante" />
        <ComboBox fx:id="cbEstudiante" layoutX="360.0" layoutY="170.0" prefWidth="270.0" promptText="Seleccione estudiante" />

        <!-- PERIODO -->
        <Label layoutX="30.0" layoutY="220.0" text="Periodo Escolar" />
        <ComboBox fx:id="cbPeriodo" layoutX="30.0" layoutY="240.0" prefWidth="300.0" promptText="Seleccione periodo" />

        <!-- ASISTENCIA -->
        <CheckBox fx:id="chkAsistencia" layoutX="360.0" layoutY="245.0" text="Asistió a la tutoría" />

        <!-- TEXTO REPORTE -->
        <Label layoutX="30.0" layoutY="290.0" text="Reporte de Tutoría" />
        <TextArea fx:id="taTextoReporte" layoutX="30.0" layoutY="310.0" prefHeight="80.0" prefWidth="600.0" promptText="Describa la tutoría realizada..." wrapText="true" />

        <!-- RESPUESTA COORDINADOR -->
        <Label layoutX="30.0" layoutY="400.0" text="Respuesta del Coordinador" />
        <TextArea fx:id="taRespuestaCoordinador" layoutX="30.0" layoutY="420.0" prefHeight="60.0" prefWidth="600.0" promptText="Respuesta o comentarios..." wrapText="true" />

        <!-- BOTONES -->
        <Button layoutX="511.0" layoutY="490.0" onAction="#clicCancelar" prefWidth="90.0" style="-fx-cursor: hand;" text="Cancelar" />

        <Button layoutX="416.0" layoutY="490.0" onAction="#clicCerrar" prefWidth="90.0" style="-fx-cursor: hand;" text="Cerrar" />

        <Button layoutX="610.0" layoutY="490.0" onAction="#clicGuardar" prefWidth="90.0" style="-fx-cursor: hand;" text="Guardar" />

    </children>
</AnchorPane>
