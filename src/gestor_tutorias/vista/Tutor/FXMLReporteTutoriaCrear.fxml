<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="590.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestor_tutorias.controlador.Tutor.FXMLReporteTutoriaCrear">
    <children>

        <Pane prefHeight="60.0" prefWidth="720.0" style="-fx-background-color: #283593;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="20.0" layoutY="15.0" text="Reporte de Tutoría" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <Label layoutX="30.0" layoutY="80.0" text="ID Reporte" />
        <Label fx:id="lbIdReporte" layoutX="93.0" layoutY="80.0" prefHeight="17.0" prefWidth="0.0" style="-fx-font-weight: bold;" />

        <Label layoutX="30.0" layoutY="105.0" text="Periodo Escolar" />
        <ComboBox fx:id="cbPeriodo" layoutX="30.0" layoutY="125.0" prefHeight="25.0" prefWidth="200.0" promptText="Seleccione Periodo" />

        <Label layoutX="250.0" layoutY="105.0" text="Fecha de Tutoría" />
        <ComboBox fx:id="cbFechaReporte" layoutX="250.0" layoutY="125.0" prefHeight="25.0" prefWidth="160.0" promptText="Seleccione Fecha" />

        <Label layoutX="430.0" layoutY="105.0" text="Estado" />
        <ComboBox fx:id="cbEstado" disable="true" layoutX="430.0" layoutY="125.0" prefWidth="200.0" promptText="Seleccione estado" />

        <Label layoutX="30.0" layoutY="175.0" text="Tutor" />
        <ComboBox fx:id="cbTutor" layoutX="30.0" layoutY="195.0" prefWidth="300.0" promptText="Seleccione tutor" />

        <Label layoutX="360.0" layoutY="175.0" text="Estudiante" />
        <ComboBox fx:id="cbEstudiante" layoutX="360.0" layoutY="195.0" prefWidth="270.0" promptText="Seleccione estudiante" />

        <CheckBox fx:id="chkAsistencia" layoutX="360.0" layoutY="240.0" text="Asistió a la tutoría" />

        <Label layoutX="30.0" layoutY="280.0" text="Reporte de Tutoría" />
        <TextArea fx:id="taTextoReporte" layoutX="30.0" layoutY="300.0" prefHeight="100.0" prefWidth="600.0" promptText="Describa la tutoría realizada..." wrapText="true" />

        <Label layoutX="30.0" layoutY="420.0" text="Respuesta del Coordinador" />
        <TextArea fx:id="taRespuestaCoordinador" editable="false" layoutX="30.0" layoutY="440.0" prefHeight="60.0" prefWidth="600.0" promptText="Respuesta o comentarios..." wrapText="true" />

        <Button layoutX="511.0" layoutY="515.0" onAction="#clicCancelar" prefWidth="90.0" style="-fx-cursor: hand;" text="Cancelar" />
        <Button layoutX="416.0" layoutY="515.0" onAction="#clicCerrar" prefWidth="90.0" style="-fx-cursor: hand;" text="Cerrar" />
        <Button layoutX="610.0" layoutY="515.0" onAction="#clicGuardar" prefWidth="90.0" style="-fx-cursor: hand;" text="Guardar" />

    </children>
</AnchorPane>
