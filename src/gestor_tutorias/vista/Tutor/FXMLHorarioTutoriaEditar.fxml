                    </font>
                </Label>
            </children>
        </Pane>

        <!-- ID -->
        <Label layoutX="30.0" layoutY="80.0" text="ID Horario" />
        <Label fx:id="lbIdHorario" layoutX="30.0" layoutY="105.0" prefHeight="17.0" prefWidth="62.0" style="-fx-font-weight: bold;" />

        <!-- FECHA -->
        <Label layoutX="200.0" layoutY="80.0" text="Fecha" />
        <DatePicker fx:id="dpFecha" layoutX="200.0" layoutY="100.0" prefWidth="200.0" />

        <!-- TUTOR -->
        <Label layoutX="430.0" layoutY="80.0" text="Tutor" />
        <ComboBox fx:id="cbTutor" layoutX="430.0" layoutY="100.0" prefWidth="220.0" />

        <!-- HORA INICIO -->
        <Label layoutX="30.0" layoutY="150.0" text="Hora Inicio" />
        <ComboBox fx:id="cbHoraInicio" layoutX="30.0" layoutY="170.0" prefWidth="100.0" />
