        <!-- HORA FIN -->
        <Label layoutX="260.0" layoutY="150.0" text="Hora Fin" />
        <ComboBox fx:id="cbHoraFin" layoutX="260.0" layoutY="170.0" prefWidth="100.0" />
        <ComboBox fx:id="cbMinutoFin" layoutX="370.0" layoutY="170.0" prefWidth="90.0" />

        <!-- ESTUDIANTE -->
        <Label layoutX="30.0" layoutY="230.0" text="Estudiante (opcional)" />
        <ComboBox fx:id="cbEstudiante" layoutX="30.0" layoutY="250.0" prefWidth="400.0" />

        <!-- PERIODO -->
        <Label layoutX="430.0" layoutY="230.0" text="Periodo Escolar" />
        <ComboBox fx:id="cbPeriodo" layoutX="430.0" layoutY="250.0" prefWidth="220.0" />

        <!-- BOTONES -->
        <Button layoutX="360.0" layoutY="360.0" onAction="#clicCancelar" text="Cancelar" />

        <Button layoutX="460.0" layoutY="360.0" onAction="#clicCerrar" text="Cerrar" />

        <Button layoutX="560.0" layoutY="360.0" onAction="#clicGuardar" text="Guardar" />

    </children>
</AnchorPane>
