<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="655.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestor_tutorias.controlador.Tutor.FXMLProblematicaConsulta">
   <children>

      <!-- ENCABEZADO -->
      <Pane prefHeight="60.0" prefWidth="700.0" style="-fx-background-color: #283593;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

         <children>
            <Label layoutX="20.0" layoutY="15.0" text="Problemática" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
         </children>
      </Pane>

      <!-- ID PROBLEMATICA -->
      <Label layoutX="30.0" layoutY="80.0" text="ID Problemática" />
      <Label fx:id="lbIdProblematica" layoutX="30.0" layoutY="105.0" style="-fx-font-weight: bold;" />

      <!-- ID REPORTE -->
      <Label layoutX="200.0" layoutY="80.0" text="ID Reporte de Tutoría" />

      <!-- ESTADO -->
      <Label layoutX="430.0" layoutY="80.0" text="Estado" />
      <ComboBox fx:id="cbEstado" layoutX="430.0" layoutY="100.0" prefWidth="220.0" promptText="Seleccione estado" />

      <!-- TITULO -->
      <Label layoutX="30.0" layoutY="150.0" text="Título" />
      <TextField fx:id="tfTitulo" layoutX="30.0" layoutY="170.0" prefWidth="620.0" promptText="Título de la problemática" />

      <!-- DESCRIPCION -->
      <Label layoutX="30.0" layoutY="220.0" text="Descripción" />
      <TextArea fx:id="taDescripcion" layoutX="30.0" layoutY="240.0" prefHeight="90.0" prefWidth="620.0" promptText="Describa la problemática detectada..." wrapText="true" />

      <!-- CARRERA -->
      <Label layoutX="30.0" layoutY="350.0" text="Carrera" />
      <ComboBox fx:id="cbCarrera" layoutX="30.0" layoutY="370.0" prefWidth="300.0" promptText="Seleccione carrera" />

      <!-- BOTONES -->
      <Button fx:id="btnCancelar" layoutX="360.0" layoutY="370.0" onAction="#clicCancelar" prefWidth="90.0" style="-fx-cursor: hand;" text="Cancelar" />

      <Button fx:id="btnCerrar" layoutX="460.0" layoutY="370.0" onAction="#clicCerrar" prefWidth="90.0" style="-fx-cursor: hand;" text="Cerrar" />

      <Button fx:id="btnGuardar" layoutX="560.0" layoutY="370.0" onAction="#clicGuardar" prefWidth="90.0" style="-fx-cursor: hand;" text="Guardar" />
      <TextField fx:id="tfIdReporteTutoria" layoutX="200.0" layoutY="101.0" promptText="1" />

   </children>
</AnchorPane>
