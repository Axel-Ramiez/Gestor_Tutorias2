<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestor_tutorias.controlador.Coordinador.FXMLPlaneacionTutoriaConsulta">

    <children>
        <Pane prefHeight="60.0" prefWidth="650.0" style="-fx-background-color: #006DB2;">
            <children>
                <Label layoutX="14.0" layoutY="15.0" text="Planeación de Tutoría Académica" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <Label layoutX="30.0" layoutY="90.0" text="Periodo Escolar:" />
        <ComboBox fx:id="cbPeriodo" layoutX="30.0" layoutY="110.0" prefHeight="25.0" prefWidth="250.0" promptText="Seleccione el periodo..." />

        <Label layoutX="320.0" layoutY="90.0" text="Programa Educativo (Carrera):" />
        <ComboBox fx:id="cbCarrera" layoutX="320.0" layoutY="110.0" prefHeight="25.0" prefWidth="250.0" promptText="Seleccione la carrera..." />

        <Label layoutX="30.0" layoutY="160.0" text="Fecha de la Tutoría:" />
        <DatePicker fx:id="fechaTutoria" layoutX="30.0" layoutY="180.0" prefHeight="25.0" prefWidth="150.0" />

        <Label layoutX="380.0" layoutY="160.0" text="Número de Sesión:" />
        <ComboBox fx:id="cbSesion" layoutX="380.0" layoutY="180.0" prefHeight="25.0" prefWidth="100.0" promptText="#" />

        <Label layoutX="30.0" layoutY="230.0" text="Temas a tratar:" />
        <TextArea fx:id="temastratar" layoutX="30.0" layoutY="250.0" prefHeight="100.0" prefWidth="540.0" wrapText="true" />

        <Label layoutX="30.0" layoutY="370.0" text="ID Registro:" />
        <TextField fx:id="tfIdPlaneacion" editable="false" layoutX="100.0" layoutY="366.0" prefWidth="50.0" style="-fx-opacity: 0.7;" />
        <Button fx:id="eliminar" layoutX="392.0" layoutY="400.0" mnemonicParsing="false" onAction="#eliminarPlaneacionTutoria" prefHeight="30.0" prefWidth="79.0" text="Eliminar" />
        <Button fx:id="guardar" layoutX="491.0" layoutY="400.0" mnemonicParsing="false" onAction="#guardarPlaneacionTutoria" prefHeight="30.0" prefWidth="79.0" text="Guardar" />

    </children>
</AnchorPane>
