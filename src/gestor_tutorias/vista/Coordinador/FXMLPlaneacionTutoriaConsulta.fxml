<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestor_tutorias.controlador.Coordinador.FXMLPlaneacionTutoriaConsulta">

    <children>

        <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="650.0" style="-fx-background-color: #2ECC71;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <children>

                <Label text="Planeacion de Tutorias" textFill="WHITE" translateX="20.0">

                    <font>

                        <Font name="System Bold" size="24.0" />

                    </font>

                </Label>

            </children>

        </VBox>

        <TitledPane animated="false" layoutX="20.0" layoutY="90.0" prefHeight="250.0" prefWidth="250.0" text="Nuevo Horario" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="90.0">

            <content>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">

                    <children>

                        <GridPane layoutX="14.0" layoutY="14.0" prefHeight="150.0" prefWidth="210.0">

                            <columnConstraints>

                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="80.0" />

                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="120.0" />

                            </columnConstraints>

                            <rowConstraints>

                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />

                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />

                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />

                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />

                            </rowConstraints>

                            <children>

                                <Label text="Día de la semana:" />

                                <Label text="Hora Inicio:" GridPane.rowIndex="1" />

                                <Label text="Hora Fin:" GridPane.rowIndex="2" />

                                <ComboBox fx:id="cmbDiaSemana" prefWidth="150.0" promptText="Seleccione día" GridPane.columnIndex="1" />

                                <ComboBox fx:id="cmbHoraInicioH" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <ComboBox fx:id="cmbHoraFinH" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <ComboBox fx:id="cmbHoraInicioM" layoutX="90.0" layoutY="63.0" prefWidth="60.0" translateX="65.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <ComboBox fx:id="cmbHoraFinM" layoutX="90.0" layoutY="103.0" prefWidth="60.0" translateX="65.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            </children>

                        </GridPane>

                        <Button fx:id="btnRegistrarHorario" layoutX="57.0" layoutY="190.0" mnemonicParsing="false" onAction="#handleRegistrarHorario" prefHeight="25.0" prefWidth="135.0" text="Registrar Horario" />

                    </children>

                </AnchorPane>

            </content>

        </TitledPane>

        <TableView fx:id="tblHorarios" layoutX="290.0" layoutY="90.0" prefHeight="250.0" prefWidth="340.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="90.0">

            <columns>

                <TableColumn fx:id="colDia" prefWidth="75.0" text="Día" />

                <TableColumn fx:id="colHoraInicio" prefWidth="130.0" text="Hora Inicio" />

                <TableColumn fx:id="colHoraFin" prefWidth="130.0" text="Hora Fin" />

            </columns>

            <columnResizePolicy>

                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />

            </columnResizePolicy>

            <placeholder>

                <Label text="Tabla sin contenido" />

            </placeholder>

        </TableView>

        <Button fx:id="btnEliminarSeleccionado" layoutX="497.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleEliminarSeleccionado" prefHeight="25.0" prefWidth="135.0" text="Eliminar Seleccionado" AnchorPane.rightAnchor="20.0" />

    </children>

</AnchorPane>
