<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestor_tutorias.controlador.Administrador.FXMLUsuario">
    <children>
        <Pane prefHeight="60.0" prefWidth="700.0" style="-fx-background-color: #006DB2;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="20.0" layoutY="15.0" text="Registro de Usuarios" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <Label layoutX="30.0" layoutY="90.0" text="Matrícula / No. Personal" textFill="#666666" />
        <TextField fx:id="tfMatricula" layoutX="30.0" layoutY="110.0" prefHeight="30.0" prefWidth="200.0" promptText="ADM001" />

        <Label layoutX="260.0" layoutY="90.0" text="Rol en el sistema" textFill="#666666" />
        <ComboBox fx:id="cbRol" layoutX="260.0" layoutY="110.0" prefHeight="30.0" prefWidth="200.0" promptText="Seleccione un rol" />

        <Label layoutX="30.0" layoutY="160.0" text="Nombre Completo" textFill="#666666" />
        <TextField fx:id="tfNombre" layoutX="30.0" layoutY="180.0" prefHeight="30.0" prefWidth="430.0" promptText="Juan Pérez López" />

        <Label layoutX="30.0" layoutY="230.0" text="Correo Institucional" textFill="#666666" />
        <TextField fx:id="tfCorreo" layoutX="30.0" layoutY="250.0" prefHeight="30.0" prefWidth="300.0" promptText="usuario@uv.mx" />

        <Label layoutX="30.0" layoutY="300.0" text="Contraseña de Acceso" textFill="#666666" />
        <PasswordField fx:id="pfContrasena" layoutX="30.0" layoutY="320.0" prefHeight="30.0" prefWidth="300.0" promptText="********" />

        <Label fx:id="lbError" layoutX="30.0" layoutY="360.0" textFill="RED" />

        <Button layoutX="460.0" layoutY="390.0" mnemonicParsing="false" onAction="#clicCancelar" prefHeight="35.0" prefWidth="100.0" style="-fx-cursor: hand;" text="Cancelar" textFill="#333333" />
        <Button layoutX="570.0" layoutY="390.0" mnemonicParsing="false" onAction="#clicGuardar" prefHeight="35.0" prefWidth="100.0" style="-fx-cursor: hand;" text="Guardar" textFill="#333333" />
    </children>
</AnchorPane>
